<nav class="navbar navbar-light bg-light justify-content-between p-3">
<div class="col-sm-4">
  <a class="navbar-brand">Simple Airbnb</a>
</div>

<form class="row row-cols-lg-auto g-3">
  <div class="col-12">
    <input type="text" class="form-control" placeholder="Search" aria-label="Search">
  </div>
  <div class="col-12">
    <button class="btn btn-outline-success" type="submit">Search</button>
  </div>
  <div class="col-12">
    <%= link_to "Add flat", new_flat_path(@flat), :class => "btn btn-outline-primary" %>
  </div>
</div>
</nav>

<div class="container d-flex justify-content-center">
  <div class="card col-6 mt-4 p-3 bg-light border-0">
  <h2>Edit Flat </h2>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.submit "Submit flat", class: "btn btn-primary" %>
<% end %>

  </div>
</div>
